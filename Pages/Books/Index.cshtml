@page
@model BookStore.Pages.Books.IndexModel

@{
    ViewData["Title"] = "BookList";
}
<script>
    $(function () {
        $("#searchBox").on("change", function () {
            $("#indexForm").submit();
        })
    })
</script>

<h2>BookList</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<div style="margin:0 auto; width:1000px;height:auto; padding:0px;">
    <form method="post" id="indexForm" asp-page-handler="NextPage">
        <input type="text" id="searchBox" name="searchString" placeholder="搜索书本名称"
               style="width:800px;margin-bottom:10px;" />
        <table class="table-hover" border="0">
            <thead>
                <tr>
                    <th style="width:auto">
                        @Html.DisplayNameFor(model => model.Book[0].BookName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Book[0].Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Book[0].Img)
                    </th>
                    <th>
                        操作
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Book)
                {
                    <tr>
                        <td class="name" style="width:300px">
                            @Html.DisplayFor(modelItem => item.BookName)
                        </td>
                        <td class="price">
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td class="img">
                            <img class="img-rounded" src="@item.Img" alt="Alternate Text" />
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                        <td>
                            <button class="btn btn-default" type="submit" asp-page-handler="AddItemToCart" asp-route-itemNo="@item.Id">
                                添加购物车
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @{
            var prevDisabled = !Model.Book.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.Book.HasNextPage ? "disabled" : "";
        }
        <button type="submit" class="btn btn-default @prevDisabled" 
                asp-page-handler="NextPage" asp-route-pageIndex="@(Model.Book.PageIndex - 1)">
            前一页
        </button>
        <button type="submit" class="btn btn-default"
                asp-page-handler="NextPage" asp-route-pageIndex="@(Model.Book.PageIndex)">
            @(Model.Book.PageIndex)
        </button>
        <button type="submit" class="btn btn-default @nextDisabled" 
                asp-page-handler="NextPage" asp-route-pageIndex="@(Model.Book.PageIndex + 1)">
            后一页
        </button>
    </form>
</div>