@page
@model BookStore.Pages.Carts.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Cart</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cart.CartId" class="control-label"></label>
                <input asp-for="Cart.CartId" class="form-control" />
                <span asp-validation-for="Cart.CartId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cart.UserId" class="control-label"></label>
                <select asp-for="Cart.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Cart.BookId" class="control-label"></label>
                <select asp-for="Cart.BookId" class ="form-control" asp-items="ViewBag.BookId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Cart.Count" class="control-label"></label>
                <input asp-for="Cart.Count" class="form-control" />
                <span asp-validation-for="Cart.Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

