@page
@model BookStore.Pages.Carts.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Cart[0].Book)
            </th>
            <th>
                数量
            </th>
            <th>
                单价
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Cart) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book.BookName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>

            <td>
                ￥@Html.DisplayFor(modelItem => item.Book.Price) 
            </td>

            <td>
                <a asp-page="./Edit" asp-route-id="@item.CartId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CartId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CartId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
